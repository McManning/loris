            array({% for id in ids -%}
                '{{ id }}' => null{{ ', ' if not loop.last }}
            {%- endfor %}),
            '{{ uri }}'
        );
{% endmacro %}

{% macro object_property(name) %}
        $this->{{ name }} = new \stdClass;
{% endmacro %}

