{% macro resource_property(name, uri, ids) %}
        $this->{{ name }} = new Meta(
            array({% for id in ids -%}
                '{{ id }}' => null{{ ', ' if not loop.last }}
            {%- endfor %}),
            '{{ uri }}'
        );
{% endmacro %}

{% macro collection_property(name, uri, ids) %}
