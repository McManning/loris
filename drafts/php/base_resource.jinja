    public static function postQuery(array ${{ id|camelcase|plural }}, array $results)
    {
        foreach (${{ id|camelcase|plural }} as ${{ id|camelcase }}) {
            if (!array_key_exists(${{ id|camelcase }}->id(), $results)) {
                throw new \Exception(
                    '{{ id }} [' . ${{ id|camelcase }}->id() . '] missing from $results'
                );
            }

            ${{ id|camelcase }}->fromResults($results[${{ id|camelcase }}->id()]);
        }

        // Query for all expanded relationships
        {{ query_object_properties(id, properties) }}

        {% for name, property in properties.iteritems() %}
        {% if property.type == 'resource' or property.type == 'collection' %}
            ${{ name|plural }} = array();
            ${{ name }}Model = \Loris\Discovery::find('{{ property.resource.uri }}');
            foreach (${{ id|camelcase|plural }} as ${{ id|camelcase }}) {
                if (${{ id|camelcase }}->{{ name }} instanceof ${{ name }}Model->class) {
                    ${{ name|plural }}[] = ${{ id|camelcase }}->{{ name }};
                }
            }
            if (!empty(${{ name|plural }})) {
                call_user_func(
                    array(${{ name }}Model->class, 'query'),
                    ${{ name|plural }}
                );
            }
        {% elif property.type == 'object' %}
            {% for name2, property2 in property.properties.iteritems() %}
            {% if property2.type == 'resource' or property2.type == 'collection' %}
                ${{ name }}{{ name2|pascalcase|plural }} = array();
                ${{ name }}{{ name2|pascalcase }}Model = \Loris\Discovery::find('{{ property2.resource.uri }}');
                foreach (${{ id|camelcase|plural }} as ${{ id|camelcase }}) {
                    if (${{ id|camelcase }}->{{ name }}->{{ name2 }} instanceof ${{ name }}{{ name2|pascalcase }}Model->class) {
                        ${{ name }}{{ name2|pascalcase|plural }}[] = ${{ id|camelcase }}->{{ name }};
                    }
                }
                if (!empty(${{ name|plural }})) {
                    call_user_func(
                        array(${{ name }}Model->class, 'query'),
                        ${{ name|plural }}
                    );
                }
            {% endif %}
            {% endfor %}
        {% elif property.type == 'array' %}
            {% if property.items.type == 'resource' or property.items.type == 'collection' %}
                ${{ name|plural }} = array();
                ${{ name }}Model = \Loris\Discovery::find('{{ property.resource.uri }}');
                foreach (${{ id|camelcase|plural }} as ${{ id|camelcase }}) {
                    foreach (${{ id|camelcase }}->{{ name }} as $item) {
                        if ($item instanceof ${{ name }}Model->class) {
                            ${{ name|plural }}[] = $item;
                        }
                    }
                }
                if (!empty(${{ name|plural }})) {
                    call_user_func(
                        array(${{ name }}Model->class, 'query'),
                        ${{ name|plural }}
                    );
                }
            {% elif property.items.type == 'object' %}
                {% for name2, property2 in property.items.properties.iteritems() %}
                {% if property2.type == 'resource' or property2.type == 'collection' %}
                    ${{ name }}{{ name2|pascalcase|plural }} = array();
                    ${{ name }}{{ name2|pascalcase }}Model = \Loris\Discovery::find('{{ property2.resource.uri }}');
                    foreach (${{ id|camelcase|plural }} as ${{ id|camelcase }}) {
                        foreach (${{ id|camelcase }}->{{ name }} as ${{ name|plural }}) {
                            if (${{ name|plural }}->{{ name2 }} instanceof ${{ name }}{{ name2|pascalcase }}Model->class) {
                                ${{ name }}{{ name2|pascalcase|plural }}[] = ${{ name|plural }}->{{ name2 }};
                            }
                        }
                    }
                    if (!empty(${{ name }}{{ name2|pascalcase|plural }})) {
                        call_user_func(
